// DO NOT ADD DATABASE_URL HERE< IT IS NOT NEEDED IN PRISMA 7

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // DO NOT ADD DATABASE_URL HERE< IT IS NOT NEEDED IN PRISMA 7
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}